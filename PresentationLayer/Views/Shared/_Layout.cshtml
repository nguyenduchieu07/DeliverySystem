@using DataAccessLayer.Constants
@using System.Security.Claims
<!DOCTYPE html>
<html lang="vi-vn">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Lalamove Vietnam</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #f16622;
            --secondary-color: #d44d0a;
            --text-dark: #171717;
            --background-light: #f8f8f8;
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
                border-color: var(--secondary-color);
            }

        .text-primary {
            color: var(--primary-color) !important;
        }

        /* Navigation */
        .navbar-brand img {
            height: 40px;
        }

        /* User Profile Dropdown */
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
        }

        .dropdown-menu {
            min-width: 10rem;
        }

        /* Footer */
        .footer {
            background-color: #333;
            color: white;
            padding: 3rem 0 2rem;
            margin-top: auto;
        }

            .footer a {
                color: #ccc;
                text-decoration: none;
            }

                .footer a:hover {
                    color: white;
                }

        /* Main wrapper để footer luôn ở dưới */
        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="https://png.pngtree.com/png-clipart/20230921/original/pngtree-delivery-truck-logo-freight-black-semi-vector-png-image_12646190.png"
                         alt="Vận tải">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Giao Hàng
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Cá Nhân</a></li>
                                <li><a class="dropdown-item" href="#">Doanh Nghiệp</a></li>
                                <li><a class="dropdown-item" href="#">Chuyển Nhà</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Di Chuyển</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Delivery" asp-action="Index" class="nav-link">Đặt xe</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Quote" asp-action="Index" class="nav-link">Lưu kho</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ưu Đãi</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Tracking" asp-action="Track" class="nav-link">
                                <i class="fas fa-search"></i> Tra cứu
                            </a>
                        </li>

                    </ul>
                    <div class="d-flex">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var userName = User.Identity.Name ?? "Khách hàng";
                            <div class="dropdown">
                                <a class="user-avatar dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @userName.Substring(0, 1)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Hồ sơ</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                    <li class="nav-item">
                                        <a asp-controller="Tracking" asp-action="Index" class="nav-link">
                                            <i class="fas fa-truck"></i> Theo dõi đơn hàng
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Store"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Stores/Home">Trở về cửa hàng</a>
                                        </li>
                                    }else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Account/RegisterStore">Đăng ký cửa hàng</a>
                                        </li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" style="margin: 0;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Đăng nhập</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Đăng ký</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <!-- Main Content -->
        <main class="content" style="margin-top: 76px;">
            @RenderBody()
        </main>
        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <img src="https://png.pngtree.com/png-clipart/20230921/original/pngtree-delivery-truck-logo-freight-black-semi-vector-png-image_12646190.png"
                             alt="Vận tải"
                             class="mb-3"
                             style="height: 120px; filter: brightness(0) invert(1);">
                        <p>Nền tảng giao hàng hàng đầu châu Á</p>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h5>Giao Hàng</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">Doanh Nghiệp</a></li>
                            <li><a href="#">Cá Nhân</a></li>
                            <li><a href="#">Đặt xe</a></li>
                            <li><a href="#">Bảng Giá Dịch Vụ</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h5>Thông Tin</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">Về Chúng Tôi</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Tuyển Dụng</a></li>
                            <li><a href="#">Liên Hệ Hỗ Trợ</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h5>Theo Dõi VCN</h5>
                        <div class="d-flex">
                            <a href="https://www.facebook.com/Lalamovevn" class="me-3">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://www.instagram.com/lalamovevn/" class="me-3">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="https://www.youtube.com/channel/UC2YVWH9ZQC1weHk6iV1Yp1Q" class="me-3">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <hr class="my-4">
                <div class="text-center">
                    <p>&copy; VCN 2025. ALL RIGHTS RESERVED</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- Scripts -->
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        $(document).ready(function () {
            // Smooth scrolling cho navigation
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 1000);
                }
            });
        });
    </script>
    <!-- jQuery Validation (phụ thuộc jQuery) -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>