@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Khách hàng";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Move&Store</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="shell">
        <aside class="sidebar">
            @Html.Partial("_CustomerNav")
        </aside>
        <main class="page">
            <div class="page-head">
                <h1 class="page-title">@ViewBag.Title</h1>
                @RenderSection("page_actions", required: false)
            </div>
            @if (TempData["Toast"] != null)
            {
                <div class="toast">@TempData["Toast"]</div>
            }
            <section class="content">
                @RenderBody()
            </section>
        </main>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>