@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu - VCN Vietnam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <h2 class="auth-title">Mật khẩu đã được đặt lại</h2>
        <p class="auth-text">
            Mật khẩu của bạn đã được thay đổi thành công.
            <a asp-action="Login" class="auth-link">Đăng nhập ngay</a>.
        </p>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/vcn-auth.js" asp-append-version="true"></script>
}
<link rel="stylesheet" href="~/css/vcn-auth.css" asp-append-version="true" />