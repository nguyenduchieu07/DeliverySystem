@model PresentationLayer.Models.ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân - VCN Vietnam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Phần CSS được chuyển vào một section riêng để đưa lên thẻ <head> của trang.
    Trong file _Layout.cshtml, bạn cần có @RenderSection("Styles", required: false) trong thẻ <head>.
*@
@section Styles {
    <link rel="stylesheet" href="~/css/vcn-auth.css" asp-append-version="true" />
}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">@(Model.Customer?.FullName?.Substring(0, 1) ?? "K")</div>
        <h2>Hồ sơ cá nhân</h2>
        <p class="text-muted">Quản lý thông tin cá nhân và đơn hàng của bạn</p>
    </div>

    <div class="profile-info">
        <form asp-action="UpdateProfile" method="post">
            <div class="form-group">
                <label>Họ và tên</label>
                <input asp-for="Customer.FullName" class="form-control" />
                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Customer.Email" class="form-control" readonly />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input asp-for="Customer.PhoneNumber" class="form-control" readonly />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ngôn ngữ ưu tiên</label>
                <input asp-for="Customer.PreferredLang" class="form-control" />
                <span asp-validation-for="Customer.PreferredLang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cấp độ</label>
                <input asp-for="Customer.Tier" class="form-control" />
                <span asp-validation-for="Customer.Tier" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
        </form>
    </div>

    <div class="address-list">
        <h3>Địa chỉ của tôi</h3>
        @if (Model.Addresses?.Any() ?? false)
        {
            foreach (var address in Model.Addresses)
            {
                <div class="address-item">
                    <span>(@address.Label), @address.AddressLine, @address.Ward, @address.District, @address.City</span>
                    <form asp-action="DeleteAddress" method="post" style="display:inline;">
                        <input type="hidden" name="addressId" value="@address.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Bạn chưa thêm địa chỉ nào.</p>
        }

        <form asp-action="AddAddress" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Thêm địa chỉ mới</label>
                <input asp-for="NewAddress.AddressLine" class="form-control" />
                <span asp-validation-for="NewAddress.AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Thành phố</label>
                <input asp-for="NewAddress.City" class="form-control" />
            </div>
            <div class="form-group">
                <label>Quận/Huyện</label>
                <input asp-for="NewAddress.District" class="form-control" />
            </div>
            <div class="form-group">
                <label>Phường/Xã</label>
                <input asp-for="NewAddress.Ward" class="form-control" />
            </div>
            <div class="form-group">
                <label>Gắn nhãn</label>
                <input asp-for="NewAddress.Label" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Thêm địa chỉ</button>
        </form>
    </div>

    <div class="order-history">
        <h3>Lịch sử đơn hàng</h3>
        <table>
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Orders != null)
                {
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                            <td>@order.Status</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@* Gộp hai section "Scripts" thành một.
    Một trang chỉ có thể có một section với cùng một tên.
*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/vcn-auth.js" asp-append-version="true"></script>
}