@{
    ViewData["Title"] = "Xác nhận quên mật khẩu - VCN Vietnam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <h2 class="auth-title">Xác nhận quên mật khẩu</h2>
        <p class="auth-subtitle">
            Vui lòng kiểm tra email của bạn để đặt lại mật khẩu.
        </p>

        <div class="back-link">
            <a asp-action="Login">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

<!-- CSS nhúng trực tiếp -->
<style>
    .auth-page {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .auth-container {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        padding: 40px;
        width: 100%;
        max-width: 450px;
    }

    .auth-title {
        text-align: center;
        font-size: 20px;
        color: #333;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .auth-subtitle {
        text-align: center;
        font-size: 14px;
        color: #666;
        margin-bottom: 30px;
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

        .back-link a {
            color: #f26722;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>

<!-- JS nhúng trực tiếp -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        console.log("Trang xác nhận quên mật khẩu đã load!");
        // Nếu bạn muốn hiệu ứng hay validate gì thêm thì viết ở đây
    });
</script>
