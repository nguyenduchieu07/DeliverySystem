@{
    ViewData["Title"] = "Xác nhận quên mật khẩu - VCN Vietnam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <h2 class="auth-title">Xác nhận quên mật khẩu</h2>
        <p class="auth-subtitle">
            Vui lòng kiểm tra email của bạn để đặt lại mật khẩu.
        </p>

        <div class="back-link">
            <a asp-action="Login">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

<!-- JS nhúng trực tiếp -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        console.log("Trang xác nhận quên mật khẩu đã load!");
        // Nếu bạn muốn hiệu ứng hay validate gì thêm thì viết ở đây
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/vcn-auth.js" asp-append-version="true"></script>
}
<link rel="stylesheet" href="~/css/vcn-auth.css" asp-append-version="true" />
