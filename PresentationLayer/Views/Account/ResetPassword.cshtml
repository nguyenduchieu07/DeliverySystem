@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu - VCN Vietnam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <h2 class="auth-title">Đặt lại mật khẩu</h2>

        <!-- Hiển thị toàn bộ lỗi validation -->
        <div asp-validation-summary="All" class="auth-alert auth-alert--error"></div>

        <form asp-action="ResetPassword" method="post" class="auth-form">
            <input asp-for="UserId" type="hidden" />
            <input asp-for="Code" type="hidden" />

            <div class="form-group">
                <label asp-for="NewPassword" class="auth-label"></label>
                <input asp-for="NewPassword" class="auth-input" type="password" />
                <span asp-validation-for="NewPassword" class="auth-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="auth-label"></label>
                <input asp-for="ConfirmPassword" class="auth-input" type="password" />
                <span asp-validation-for="ConfirmPassword" class="auth-error"></span>
            </div>

            <button type="submit" class="auth-btn">Đặt lại mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/vcn-auth.js" asp-append-version="true"></script>
}
<link rel="stylesheet" href="~/css/vcn-auth.css" asp-append-version="true" />
