@{
    Layout = null;
    var title = ViewBag.Title ?? "Store Admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="~/css/storeSite.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app">
        @await Html.PartialAsync("_Topbar")
        <input type="checkbox" id="navToggle" />
        <div class="body">
            @await Html.PartialAsync("_Sidebar")
            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>
    

    <!-- jQuery & validation (đặt TRƯỚC @@RenderSection("Scripts")) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" defer></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>

    <!-- jQuery Validation (phụ thuộc jQuery) -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
