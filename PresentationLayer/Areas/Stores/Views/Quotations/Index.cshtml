@{
    ViewData["Title"] = "Quản lý Báo giá";
    Layout = "~/Areas/Stores/Views/Shared/_Layout.cshtml";
}

<style>
    .quotations-container {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

        .page-header h1 {
            margin: 0;
            font-size: 2rem;
        }

        .page-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        border-left: 5px solid #667eea;
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .stat-card.warning {
            border-left-color: #f39c12;
        }

        .stat-card.success {
            border-left-color: #27ae60;
        }

        .stat-card.info {
            border-left-color: #3498db;
        }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.95rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .tabs-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .tab-header {
        display: flex;
        border-bottom: 2px solid #f0f0f0;
        background: #fafafa;
    }

    .tab-button {
        flex: 1;
        padding: 20px;
        border: none;
        background: none;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 600;
        color: #666;
        transition: all 0.3s;
        position: relative;
    }

        .tab-button:hover {
            background: #f0f0f0;
        }

        .tab-button.active {
            color: #667eea;
            background: white;
        }

            .tab-button.active::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                right: 0;
                height: 3px;
                background: #667eea;
            }

    .tab-badge {
        display: inline-block;
        background: #e74c3c;
        color: white;
        padding: 3px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
        margin-left: 8px;
    }

    .tab-button.active .tab-badge {
        background: #667eea;
    }

    .tab-content {
        display: none;
        padding: 30px;
    }

        .tab-content.active {
            display: block;
        }

    .quotation-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .quotation-table thead th {
            padding: 15px;
            text-align: left;
            color: #666;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

    .quotation-row {
        background: #f8f9fa;
        transition: all 0.3s;
        cursor: pointer;
    }

        .quotation-row:hover {
            background: #e8f0fe;
            transform: scale(1.01);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .quotation-row td {
            padding: 20px 15px;
            border-top: 1px solid #e0e0e0;
            border-bottom: 1px solid #e0e0e0;
        }

            .quotation-row td:first-child {
                border-left: 1px solid #e0e0e0;
                border-radius: 10px 0 0 10px;
            }

            .quotation-row td:last-child {
                border-right: 1px solid #e0e0e0;
                border-radius: 0 10px 10px 0;
            }

    .quote-id {
        font-weight: 700;
        color: #667eea;
        font-size: 1.05rem;
    }

    .customer-name {
        color: #333;
        font-weight: 600;
    }

    .amount {
        font-size: 1.2rem;
        font-weight: 700;
        color: #27ae60;
    }

    .valid-until {
        display: flex;
        align-items: center;
        gap: 5px;
        color: #666;
    }

        .valid-until.urgent {
            color: #e74c3c;
            font-weight: 600;
        }

    .status-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-sent {
        background: #fff3cd;
        color: #856404;
    }

    .status-revised {
        background: #cce5ff;
        color: #004085;
    }

    .status-accepted {
        background: #d4edda;
        color: #155724;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 8px 15px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-view {
        background: #667eea;
        color: white;
    }

        .btn-view:hover {
            background: #5568d3;
            transform: translateY(-2px);
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-state h3 {
        color: #666;
        margin-bottom: 10px;
    }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .quotation-row {
        animation: fadeIn 0.5s ease-out;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-row {
            grid-template-columns: 1fr;
        }

        .tab-header {
            flex-direction: column;
        }

        .quotation-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<div class="quotations-container">
    <div class="page-header">
        <h1>📋 Quản lý Báo giá</h1>
        <p>Theo dõi và xử lý các yêu cầu báo giá từ khách hàng</p>
    </div>

    <div class="stats-row">
        <div class="stat-card warning">
            <div class="stat-value">@ViewBag.Waiting.Count</div>
            <div class="stat-label">⏳ Chờ xử lý</div>
        </div>
        <div class="stat-card info">
            <div class="stat-value">@ViewBag.Revised.Count</div>
            <div class="stat-label">✏️ Đã chỉnh sửa</div>
        </div>
        <div class="stat-card success">
            <div class="stat-value">@ViewBag.Accepted.Count</div>
            <div class="stat-label">✅ Đã chấp nhận</div>
        </div>
    </div>

    <div class="tabs-container">
        <div class="tab-header">
            <button class="tab-button @(ViewBag.Tab == "waiting" ? "active" : "")" data-tab="waiting">
                ⏳ Chờ xử lý
                @if (ViewBag.Waiting.Count > 0)
                {
                    <span class="tab-badge">@ViewBag.Waiting.Count</span>
                }
            </button>
            <button class="tab-button @(ViewBag.Tab == "revised" ? "active" : "")" data-tab="revised">
                ✏️ Đã chỉnh sửa
                @if (ViewBag.Revised.Count > 0)
                {
                    <span class="tab-badge">@ViewBag.Revised.Count</span>
                }
            </button>
            <button class="tab-button @(ViewBag.Tab == "accepted" ? "active" : "")" data-tab="accepted">
                ✅ Đã chấp nhận
                @if (ViewBag.Accepted.Count > 0)
                {
                    <span class="tab-badge">@ViewBag.Accepted.Count</span>
                }
            </button>
        </div>

        <!-- Tab Chờ xử lý -->
        <div class="tab-content @(ViewBag.Tab == "waiting" ? "active" : "")" id="waiting">
            @if (ViewBag.Waiting.Count > 0)
            {
                <table class="quotation-table">
                    <thead>
                        <tr>
                            <th>Mã báo giá</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Hết hạn</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Waiting)
                        {
                            var timeLeft = (item.ValidUntil - DateTime.UtcNow).TotalHours;
                            var isUrgent = timeLeft <= 24;

                            <tr class="quotation-row" onclick="window.location.href='@Url.Action("Detail", new { id = item.Id })'">
                                <td>
                                    <div class="quote-id">#@item.Id.ToString().Substring(0, 8).ToUpper()</div>
                                </td>
                                <td>
                                    <div class="customer-name">@item.Customer</div>
                                </td>
                                <td>
                                    <div class="amount">@item.TotalAmount.ToString("N0") đ</div>
                                </td>
                                <td>
                                    <div class="valid-until @(isUrgent ? "urgent" : "")">
                                        @if (isUrgent)
                                        {
                                            <span>⚠️</span>
                                        }
                                        else
                                        {
                                            <span>⏰</span>
                                        }
                                        <span>@item.ValidUntil.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-sent">Chờ xử lý</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Detail", new { id = item.Id })" class="btn-action btn-view">
                                            👁️ Xem chi tiết
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📭</div>
                    <h3>Không có báo giá chờ xử lý</h3>
                    <p>Hiện tại không có báo giá nào đang chờ bạn xử lý</p>
                </div>
            }
        </div>

        <!-- Tab Đã chỉnh sửa -->
        <div class="tab-content @(ViewBag.Tab == "revised" ? "active" : "")" id="revised">
            @if (ViewBag.Revised.Count > 0)
            {
                <table class="quotation-table">
                    <thead>
                        <tr>
                            <th>Mã báo giá</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Hết hạn</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Revised)
                        {
                            <tr class="quotation-row" onclick="window.location.href='@Url.Action("Detail", new { id = item.Id })'">
                                <td>
                                    <div class="quote-id">#@item.Id.ToString().Substring(0, 8).ToUpper()</div>
                                </td>
                                <td>
                                    <div class="customer-name">@item.Customer</div>
                                </td>
                                <td>
                                    <div class="amount">@item.TotalAmount.ToString("N0") đ</div>
                                </td>
                                <td>
                                    <div class="valid-until">
                                        <span>⏰</span>
                                        <span>@item.ValidUntil.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-revised">Đã chỉnh sửa</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Detail", new { id = item.Id })" class="btn-action btn-view">
                                            👁️ Xem chi tiết
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📝</div>
                    <h3>Không có báo giá đã chỉnh sửa</h3>
                    <p>Chưa có báo giá nào được chỉnh sửa</p>
                </div>
            }
        </div>

        <!-- Tab Đã chấp nhận -->
        <div class="tab-content @(ViewBag.Tab == "accepted" ? "active" : "")" id="accepted">
            @if (ViewBag.Accepted.Count > 0)
            {
                <table class="quotation-table">
                    <thead>
                        <tr>
                            <th>Mã báo giá</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Hết hạn</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Accepted)
                        {
                            <tr class="quotation-row" onclick="window.location.href='@Url.Action("Detail", new { id = item.Id })'">
                                <td>
                                    <div class="quote-id">#@item.Id.ToString().Substring(0, 8).ToUpper()</div>
                                </td>
                                <td>
                                    <div class="customer-name">@item.Customer</div>
                                </td>
                                <td>
                                    <div class="amount">@item.TotalAmount.ToString("N0") đ</div>
                                </td>
                                <td>
                                    <div class="valid-until">
                                        <span>⏰</span>
                                        <span>@item.ValidUntil.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-accepted">Đã chấp nhận</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Detail", new { id = item.Id })" class="btn-action btn-view">
                                            👁️ Xem chi tiết
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">✅</div>
                    <h3>Không có báo giá đã chấp nhận</h3>
                    <p>Chưa có báo giá nào được chấp nhận</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tab switching
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', function() {
                const tabName = this.dataset.tab;

                // Update buttons
                document.querySelectorAll('.tab-button').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');

                // Update content
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(tabName).classList.add('active');

                // Update URL
                const url = new URL(window.location);
                url.searchParams.set('tab', tabName);
                window.history.pushState({}, '', url);
            });
        });

        // Auto refresh every 60 seconds
        setTimeout(() => {
            location.reload();
        }, 60000);
    </script>
}