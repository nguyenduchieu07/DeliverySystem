@using PresentationLayer.Areas.Stores.Models
@model PriceTierVM
<form method="post" action="@Url.Action("AddTier", "Service")" class="grid" style="grid-template-columns:repeat(6,1fr);gap:10px">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ServiceId)
    <div><label>Từ</label><input type="datetime-local" name="ValidFrom" value="@Model.ValidFrom.ToString("yyyy-MM-dd hh-mm-ss")" required /></div>
    <div><label>Đến</label><input type="datetime-local" name="ValidTo" /></div>
    <div><label>Min</label><input type="number" name="MinQty" min="0" /></div>
    <div><label>Max</label><input type="number" name="MaxQty" min="0" /></div>
    <div><label>Giá</label><input type="number" name="Price" step="0.01" required /></div>
    <div style="align-self:end"><button class="btn" type="submit">+ Thêm tier</button></div>
</form>