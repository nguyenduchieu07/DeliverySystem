@model IEnumerable<DataAccessLayer.Entities.Feedback>

@{
    ViewBag.Title = "Phản hồi & Kiểm duyệt";
}

<div class="feedback-container">
    <h2 class="page-title">Danh sách Feedback</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="empty">Chưa có feedback nào.</p>
    }
    else
    {
        <table class="feedback-table">
            <thead>
                <tr>
                    <th>Người gửi</th>
                    <th>Cửa hàng</th>
                    <th>Đánh giá</th>
                    <th>Bình luận</th>
                    <th>Ngày tạo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.FromUser.Customer.FullName</td>
                        <td>@f.ToStore?.StoreName</td>
                        <td>
                            <div class="stars">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= f.Rating)
                                    {
                                        <span class="star filled">&#9733;</span>
                                    }
                                    else
                                    {
                                        <span class="star">&#9734;</span>
                                    }
                                }
                            </div>
                        </td>
                        <td>@f.Comment</td>
                        <td>@f.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .feedback-container {
        background-color: #fff;
        padding: 24px;
        border-radius: 16px;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        margin: 30px auto;
        font-family: 'Segoe UI', sans-serif;
    }

    .page-title {
        text-align: center;
        color: #5b3cc4;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .feedback-table {
        width: 100%;
        border-collapse: collapse;
    }

        .feedback-table th,
        .feedback-table td {
            padding: 12px 10px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .feedback-table th {
            background-color: #f5f2ff;
            color: #5b3cc4;
            font-weight: 600;
        }

        .feedback-table tr:hover {
            background-color: #faf7ff;
        }

    .empty {
        text-align: center;
        color: #777;
        font-style: italic;
        margin-top: 20px;
    }

    .stars {
        display: flex;
        gap: 2px;
    }

    .star {
        color: #ccc;
        font-size: 18px;
    }

        .star.filled {
            color: #ffb400;
        }
</style>


