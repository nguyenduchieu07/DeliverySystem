@using DataAccessLayer.Entities
@using DataAccessLayer.Enums
@{
    var scope = (TargetType)(ViewBag.Scope ?? TargetType.Store);
    ViewBag.Title = "Ban Center";
}

<div class="tabs">
    <div class="tab" data-tab="kyc"><a asp-area="Admin" asp-controller="Kyc" asp-action="Index">KYC</a></div>
    <div class="tab" data-tab="feedback"><a asp-area="Admin" asp-controller="Reviews" asp-action="Index">Feedback</a></div>
    <div class="tab active" data-tab="ban">Ban</div>
</div>

<section class="grid panel">
    <div class="card col-12">
        <div class="head">
            <h3>Ban Center — @scope</h3>
            <form method="get" class="filters">
                <select name="scope">
                    <option value="@TargetType.Store" selected="@(scope== TargetType.Store)">Store</option>
                    <option value="@TargetType.Customer" selected="@(scope==  TargetType.Customer)">User</option>
                </select>
                <select name="status">
                    <option value="">All</option>
                    <option value="Active">Active</option>
                    <option value="Banned">Banned</option>
                </select>
                <input class="input" name="q" placeholder="Tìm theo tên @scope" value="@Context.Request.Query["q"]" />
                <button class="btn">Lọc</button>
            </form>
        </div>

        <div class="body">

            @if (scope == TargetType.Store)
            {
                var stores = (IEnumerable<Store>)Model!;
                <table class="table" style="width:100%">
                    <thead>
                        <tr>
                            <th>Store</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th style="width:260px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in stores)
                        {
                            var chip = s.Status == "Banned" ? "danger" : "ok";
                            <tr>
                                <td><b>@s.StoreName</b><div class="muted" style="font-size:12px">@s.Id.ToString().Substring(0,4)</div></td>
                                <td><span class="chip @chip">@s.Status</span></td>
                                <td>@s.CreatedAt.ToLocalTime()</td>
                                <td>@s.UpdatedAt.ToLocalTime()</td>
                                <td style="display:flex;gap:6px">
                                    @if (s.Status == "Banned")
                                    {
                                        <form asp-area="Admin" asp-controller="Banned" asp-action="UnbanStore" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@s.Id" />
                                            <button class="btn">Unban</button>
                                        </form>

                                    }
                                    else
                                    {
                                        <form asp-area="Admin" asp-controller="Banned" asp-action="BanStore" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@s.Id" />
                                            <button class="btn danger">Ban</button>
                                        </form>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                var users = (IEnumerable<User>)Model!;
                <table class="table" style="width:100%">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th style="width:260px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in users)
                        {
                            var chip = u.Status == "Banned" ? "danger" : "ok";
                            <tr>
                                <td><b>@(u.UserName ?? "(no-username)")</b><div class="muted" style="font-size:12px">@u.Id.ToString().Substring(0, 4)</div></td>
                                <td>@u.Email</td>
                                <td><span class="chip @chip">@u.Status</span></td>
                                <td>@u.CreatedAt.ToLocalTime()</td>
                                <td>@u.UpdatedAt.ToLocalTime()</td>
                                <td style="display:flex;gap:6px">
                                    @if (u.Status == "Banned")
                                    {
                                        <form asp-area="Admin" asp-controller="Banned" asp-action="UnbanUser" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn">Unban</button>
                                        </form>

                                    }
                                    else
                                    {
                                        <form asp-area="Admin" asp-controller="Banned" asp-action="BanUser" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn danger">Ban</button>
                                        </form>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>
