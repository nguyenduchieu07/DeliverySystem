    </div>
    <div class="actions">
        <a class="btn" asp-area="Admin" asp-controller="Kyc" asp-action="Index">KYC</a>
        <a class="btn" asp-area="Admin" asp-controller="Reviews" asp-action="Index">Đánh giá</a>
        <a class="btn" asp-area="Admin" asp-controller="Ban" asp-action="Index">Cấm</a>
