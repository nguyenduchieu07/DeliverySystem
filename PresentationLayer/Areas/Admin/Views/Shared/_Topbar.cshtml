@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="topbar">
    <label for="navToggle" class="btn toggle">☰</label>
    <div class="brand">
        <div class="logo"></div>
        <span>Admin Console</span>
    </div>
    <div class="search">
        <input placeholder="Tìm kiếm cửa hàng, người dùng, đánh giá…" />
