<style>
    /* Orange Theme Colors */
    .bg-gradient-primary {
        background-color: #e5501b;
        background-image: linear-gradient(180deg, #e5501b 10%, #d26c45 100%);
        background-size: cover;
    }

    .sidebar-dark .nav-item .nav-link {
        color: rgba(255, 255, 255, 0.8);
    }

    .sidebar-dark .nav-item .nav-link:hover {
        color: #fff;
        background-color: rgba(255, 255, 255, 0.1);
    }

    .sidebar-dark .nav-item .nav-link.active {
        color: #fff;
        background-color: rgba(255, 255, 255, 0.15);
    }

    .sidebar-dark .nav-item .nav-link[data-toggle="collapse"]::after {
        color: rgba(255, 255, 255, 0.5);
    }

    .sidebar-dark .sidebar-brand {
        color: #fff;
    }

    .sidebar-dark .sidebar-brand:hover {
        color: #fff;
    }

    .sidebar-dark hr.sidebar-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.15);
    }

    .sidebar-dark .sidebar-heading {
        color: rgba(255, 255, 255, 0.4);
        text-transform: uppercase;
        font-weight: 800;
        font-size: 0.65rem;
    }

    .sidebar-dark .collapse-inner {
        background-color: #fff;
        border-radius: 0.35rem;
    }

    .sidebar-dark .collapse-item {
        color: #3a3b45;
        padding: 0.5rem 1rem;
        display: block;
        text-decoration: none;
        font-size: 0.85rem;
        white-space: nowrap;
    }

    .sidebar-dark .collapse-item:hover {
        background-color: #f8f9fc;
        color: #e5501b;
    }

    .sidebar-dark .collapse-item.active {
        color: #e5501b;
        font-weight: 700;
    }

    .sidebar-dark .collapse-header {
        color: #858796;
        text-transform: uppercase;
        font-weight: 800;
        font-size: 0.65rem;
        padding: 0.5rem 1rem;
        margin: 0;
    }

    #sidebarToggle {
        background-color: rgba(255, 255, 255, 0.2);
        width: 2.5rem;
        height: 2.5rem;
    }

    #sidebarToggle:hover {
        background-color: rgba(255, 255, 255, 0.3);
    }

    #sidebarToggle::after {
        font-family: 'Font Awesome 5 Free';
        content: '\f104';
        font-weight: 900;
        color: rgba(255, 255, 255, 0.5);
    }

    #sidebarToggle:hover::after {
        color: #fff;
    }

    .sidebar-brand-icon img {
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    /* Hover effect for nav items */
    .sidebar-dark .nav-item .nav-link i {
        color: rgba(255, 255, 255, 0.6);
        transition: all 0.3s;
    }

    .sidebar-dark .nav-item .nav-link:hover i,
    .sidebar-dark .nav-item .nav-link.active i {
        color: #fff;
    }
</style>

